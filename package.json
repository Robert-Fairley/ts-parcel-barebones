{
  "name": "ts-parcel-barebones",
  "version": "1.0.0",
  "description": "A boilerplate front-end web application for developing in ES6 using Parcel as a bundler.",
  "main": "index.ts",
  "scripts": {
    "start": "parcel src/index.html",
    "prebuild": "npm test",
    "build": "parcel build src/index.html",
    "watch": "parcel watch src/index.html",
    "test": "./node_modules/mocha/bin/mocha --compilers ts:ts-node/register --harmony --require babel-register --require mock-css-modules"
  },
  "author": "Robert Fairley <robert.fairley@rci.rogers.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "autoprefixer": "^8.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "jsdom": "^11.6.2",
    "mocha": "^5.0.4",
    "mocha-jsdom": "^1.1.0",
    "postcss-modules": "^1.1.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Robert-Fairley/es6-parcel-barebones.git"
  }
}
